<UserControl x:Class="AppLauncher.Views.AppGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppLauncher.Views"
             Foreground="White"
             xmlns:fa5="http://schemas.fontawesome.com/icons/"
             xmlns:viewModels="clr-namespace:AppLauncher.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <d:UserControl.DataContext>
        <viewModels:AppGroupViewModel/>
    </d:UserControl.DataContext>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--Заголовок-->
        <DockPanel >
            <fa5:FontAwesome Icon="Solid_Bars" Margin="10" VerticalAlignment="Center" FontSize="20"/>
            <TextBox Foreground="White" Background="Transparent" BorderThickness="0" Text="Название группы" FontSize="18" Margin="0,10,10,10"></TextBox>
        </DockPanel>

        <!--Содержимое-->
        <WrapPanel Grid.Row="1">

        </WrapPanel>
    </Grid>
</UserControl>
