<Window x:Class="AppLauncher.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:AppLauncher.ViewModels"
        xmlns:views="clr-namespace:AppLauncher.Views"
        xmlns:fa5="http://schemas.fontawesome.com/icons/"
        Loaded="MainWindow_OnLoaded"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        Title="MainWindow" Height="450" Width="800">
    <d:Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </d:Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:AppGroupViewModel}">
            <views:AppGroup DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Border CornerRadius="10" Background="#99000000"/>
        <DockPanel>

            <!--Заголовок-->
            <DockPanel DockPanel.Dock="Top" LastChildFill="False" MouseLeftButtonDown="TitleDockPanel_OnMouseLeftButtonDown" Background="Transparent">

                <Button DockPanel.Dock="Left" Margin="5" Padding="5,2"
                        ToolTip="Добавить группу"
                        Command="{Binding AddGroupCommand}" Cursor="Hand">
                    <Button.Content>
                        <fa5:FontAwesome Icon="Solid_PlusCircle"/>
                    </Button.Content>
                </Button>

                <Button DockPanel.Dock="Right" Margin="5" Padding="5,2"
                        ToolTip="Закрыть окно"
                        Command="{Binding CloseWindowCommand}" Cursor="Hand">
                    <Button.Content>
                        <fa5:FontAwesome Icon="Solid_Times"/>
                    </Button.Content>
                </Button>
            </DockPanel>

            <!--Наполнение-->
            <UniformGrid Columns="{Binding ColumnsCount}" Rows="1">
                <ItemsControl ItemsSource="{Binding Groups1Column}"/>
                <ItemsControl ItemsSource="{Binding Groups2Column}"/>
            </UniformGrid>
        </DockPanel>

    </Grid>
</Window>
